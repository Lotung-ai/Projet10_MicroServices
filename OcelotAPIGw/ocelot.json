{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/Patient",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "microservices",
          "Port": 80 // Port exposé par le microservice 
        }
      ],
      "UpstreamPathTemplate": "/gateway/patients",
      "UpstreamHttpMethod": [ "POST", "GET" ]
    },
    {
      "DownstreamPathTemplate": "/api/Patient/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "microservices",
          "Port": 80 // Port exposé par le microservice 
        }
      ],
      "UpstreamPathTemplate": "/gateway/patients/{id}",
      "UpstreamHttpMethod": [ "GET", "PUT", "DELETE" ]
    },
    {
      "DownstreamPathTemplate": "/api/Patient/search?firstName={firstName}&lastName={lastName}&dateOfBirth={dateOfBirth}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "microservices",
          "Port": 80 // Port exposé par le microservice 
        }
      ],
      "UpstreamPathTemplate": "/gateway/patients/search",
      "UpstreamHttpMethod": [ "GET" ]
    },
    {
      "DownstreamPathTemplate": "/api/PatientMongo",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "microservices",
          "Port": 80 // Port exposé par le microservice 
        }
      ],
      "UpstreamPathTemplate": "/gateway/patientsmongo",
      "UpstreamHttpMethod": [ "POST", "GET" ]
    },
    {
      "DownstreamPathTemplate": "/api/PatientMongo/{id:length(24)}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "microservices",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/gateway/patientsmongo/byid/{id:length(24)}",
      "UpstreamHttpMethod": [ "GET", "PUT", "DELETE" ]
    },
    {
      "DownstreamPathTemplate": "/api/PatientMongo/{patId}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "microservices",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/gateway/patientsmongo/bypatid/{patId}",
      "UpstreamHttpMethod": [ "GET", "PUT", "DELETE" ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://ocelotapigw:80" // URL de base pour Ocelot  // Le port de Ocelot API Gateway. Ocelot http://localhost:5003/api/patients vers http://localhost:5000/Patient.
  }
}