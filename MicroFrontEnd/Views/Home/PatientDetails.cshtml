@model MicroServices.Models.Patient
@{
    ViewData["Title"] = "Get Patient";
}
<h1>Patient Details</h1>

<form asp-controller="Requete" asp-action="GetPatientDetails" method="get">
    <label for="patientId">Enter Patient ID:</label>
    <input type="number" id="patientId" name="patientId" required />
    <button type="submit">Get Patient</button>
</form>

@if (Model != null)
{
    <dl>
        <dt>ID</dt>
        <dd>@Model.Id</dd>

        <dt>First Name</dt>
        <dd>@Model.FirstName</dd>

        <dt>Last Name</dt>
        <dd>@Model.LastName</dd>

        <dt>Date of Birth</dt>
        <dd>@Model.DateOfBirth.ToShortDateString()</dd>

        <dt>Gender</dt>
        <dd>@Model.Gender</dd>

        <dt>Address</dt>
        <dd>@Model.Address</dd>

        <dt>Phone Number</dt>
        <dd>@Model.PhoneNumber</dd>
    </dl>
}
else
{
    <p>No patient data available.</p>
}

@if (ViewData["ErrorMessage"] != null)
{
    <p class="text-danger">@ViewData["ErrorMessage"]</p>
}
